<?xml version="1.0" encoding="UTF-8"?>
<site>
   <description>
      To install these features, point Eclipse at this site.
   </description>

   <category-def label="JBoss Fuse Tooling Nightly Build Update Site" name="AllFeatures">
      <description>JBoss Fuse Tooling Nightly Build Update Site: contains all features in this build.</description>
   </category-def>
   <category-def label="JBoss Fuse Tooling Nightly Build Update Site" name="AllSources">
      <description>JBoss Fuse Tooling Nightly Build Update Site: contains all source features in this build.</description>
   </category-def>

<!-- Core -->
   <feature id="org.fusesource.ide.core.feature">
      <category name="AllFeatures"/>
   </feature>
   <!-- sources -->
   <feature id="org.fusesource.ide.core.feature.source">
      <category name="AllSources"/>
   </feature>

<!-- Editor -->
   <feature id="org.fusesource.ide.camel.editor.feature">
      <category name="AllFeatures"/>
   </feature>
   <!-- sources -->
   <feature id="org.fusesource.ide.camel.editor.feature.source">
      <category name="AllSources"/>
   </feature>

<!-- JMX -->
   <feature id="org.fusesource.ide.jmx.feature">
      <category name="AllFeatures"/>
   </feature>
   <!-- sources -->
   <feature id="org.fusesource.ide.jmx.feature.source">
      <category name="AllSources"/>
   </feature>

<!-- Fabric8 -->
   <feature id="org.fusesource.ide.fabric8.feature">
      <category name="AllFeatures"/>
   </feature>
   <!-- sources -->
   <feature id="org.fusesource.ide.fabric8.feature.source">
      <category name="AllSources"/>
   </feature>

<!-- Servers -->
   <feature id="org.fusesource.ide.server.extensions.feature">
      <category name="AllFeatures"/>
   </feature>
   <!-- sources -->
   <feature id="org.fusesource.ide.server.extensions.feature.source">
      <category name="AllSources"/>
   </feature>

</site>
